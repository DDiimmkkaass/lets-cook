
/* ----- RECIPE SIMPLE ----- */

.recipe-simple
  margin-top: 90px

  &__ingredients
    .order-ing__list-wrapper::before
      border-color: $bg-green-1 transparent transparent transparent

.recipe-simple-basket
  js-display: flex; display: flex
  flex-direction: column

  +bp('1024')
    flex-direction: row

  &__left
    order: 1
    width: 100%
    padding: (45px * (310 / 720)) 2% (55px * (310 / 720)) 3%
    background-color: $bg-white-1

    +bp('480')
      padding: (45px * (470 / 720)) 2% (55px * (470 / 720)) 3%

    +bp('768')
      padding: 45px 2% 55px 3%

    +bp('1024')
      order: 0
      width: 50%


  &__title
    text-transform: none
    text-align: center
    margin-bottom: 30px

    +bp('1024')
      text-align: left
      margin-bottom: 0

  &__info
    margin-top: 35px * (310 / 720)
    js-display: flex; display: flex
    flex-direction: column

    +bp('480')
      margin-top: 35px * (470 / 720)
      flex-direction: row
      justify-content: space-between

    +bp('768')
      margin-top: 35px


  &__details
    width: 100%

    +bp('480')
      width: (290 / 510) * 100%

  &__rating
    fs(0px)

  &__rating-title, &__count-title, &__time-title
    margin-right: 18px
    display: inline-block
    vertical-align: middle
    font-family: $georgia
    fsh(14px, 26px)
    font-style: italic
    color: $font-black-1

  &__rating-stars
    display: inline-block
    vertical-align: middle
    fs(0px)

    span
      display: inline-block
      vertical-align: top
      size: 26px 25px
      background: url('../images/stars-icons.png') -27px 0px no-repeat

      &:not(:last-child)
        margin-right: 2px

      &[data-active]
        background-position: 0px 0px

  &__count
    margin: 22px 0 18px
    fs(0px)

  &__count-value
    display: inline-block
    vertical-align: middle
    fsh(14px, 34px)
    font-family: $ptsans-regular

    span
      display: inline-block
      margin-right: 12px
      size: 34px
      background-color: $bg-red-2
      border-radius: 50%
      font-family: $ptsans-narrow-regular
      fsh(20px, 34px)
      text-align: center
      color: $font-yellow-2

  &__time
    fs(0px)

  &__time-value
    position: relative
    display: inline-block
    vertical-align: middle
    padding-left: 30px
    fsh(14px, 34px)
    font-family: $ptsans-regular

    &::before
      absolute: top 50% left 0
      transform: translateY(-50%)
      content: ''
      display: inline-block
      size: 18px
      background: url('../images/recipe-clock-icon.png') center center / cover no-repeat

  &__tags
    margin: 30px 0 0; padding: 0; list-style-type: none
    width: 100%
    fs(0px)

    +bp('1024')
      margin: 0
      width: 50%

    li
      @extend .transparent-green-regular-button
      margin: 0 16px 15px 0
      background-color: $base-bg-color

  &__right
    order: 0
    size: 100% auto
    padding-bottom: (377 / 615) * 100%
    background: $bg-green-1 center center / cover no-repeat

    +bp('1024')
      order: 1
      width: 50%
      padding: 0


.all-baskets
  margin: 0 auto
  js-display: flex; display: flex
  flex-direction: column
  width: 100%
  padding: (65px * (310 / 720)) (20px * (310 / 720))
  fs(0px)

  +bp('480')
    padding: (65px * (470 / 720)) (20px * (470 / 720))

  +bp('768')
    padding: 65px 20px

  +bp('1024')
    flex-direction: row
    justify-content: space-between
    width: 95%
    padding: 65px 0px

  &__title
    display: inline-block
    vertical-align: top
    text-transform: none
    margin: 0 0 30px * (310 / 720) 0
    text-align: center
    width: 100%

    +bp('480')
      margin-bottom: 30px * (470 / 720)

    +bp('768')
      margin-bottom: 30px

    +bp('1024')
      width: (390 / 980) * 100%
      text-align: left
      margin-bottom: 0

  &__list
    margin: 0; padding: 0; list-style-type: none
    display: inline-block
    vertical-align: top
    text-align: center
    width: 100%

    +bp('1024')
      width: (590 / 980) * 100%
      text-align: left

    li
      display: inline-block
      margin-right: 40px * (310 / 720)

      +bp('480')
        margin-right: 40px * (470 / 720)

      +bp('768')
        margin-right: 40px

    li a
      font-family: $ptsans-narrow-regular
      fsh(28px * (310 / 720), 1.42857143)
      color: $font-black-2
      text-decoration: underline
      cursor: pointer

      &:hover
        text-decoration: none

      +bp('480')
        fs(28px * (470 / 720))

      +bp('768')
        fs(28px)


.cook-with-us
  padding: (35px * (310 / 720)) (55px * (310 / 720))
  background-color: $bg-green-1

  +bp('480')
    padding: (35px * (470 / 720)) (55px * (470 / 720))

  +bp('768')
    padding: 35px 55px

  &__title
    margin: 0
    width: 100%
    text-align: center
    color: $font-white-1
    text-transform: none

  &__desk
    margin: 25px * (310 / 720) auto 0
    text-align: center
    font-family: $ptsans-bold
    fsh(25px * (310 / 720), 1.25)
    color: $font-white-1

    +bp('480')
      margin-top: 25px * (470 / 720)
      fs(25px * (470 / 720))

    +bp('768')
      margin-top: 25px
      fs(25px)

    +bp('1024')
      width: 670px


  &__list
    position: relative
    margin: (85px * (310 / 720)) auto 0; padding: 0; list-style-type: none
    js-display: flex; display: flex;
    flex-direction: column
    align-items: center
    max-width: 870px
    color: $font-white-1


    +bp('480')
      margin-top: 85px * (470 / 720)

    +bp('768')
      margin-top: 85px

    +bp('1024')
      flex-direction: row
      justify-content: space-between
      align-items: flex-start

      &::before
        content: ''
        absolute: top 23px left 50%
        transform: translateX(-50%)
        z-index: 1
        size: 80% 1px
        background-color: rgba(255,255,255,0.5)

  &__item
    position: relative
    z-index: 2
    width: 200px
    text-align: center

    &:not(:last-of-type)
      margin-bottom: 20px

    +bp('1024')
      &:not(:last-of-type)
        margin-bottom: 0

    &::after
      content: ''
      absolute: top 0px left 50%
      z-index: -1
      transform: translateX(-50%)
      size: 70% 100%
      background-color: $bg-green-1

  &__item-icon

    &::before
      font-family: $fontello
      fsh(45px, 1)
      color: $font-white-1

    &[data-icon='1']
      &::before
        content: 'X'

    &[data-icon='2']
      &::before
        content: 'X'

    &[data-icon='3']
      &::before
        content: 'X'

    &[data-icon='4']
      &::before
        content: 'X'



  &__item-desk
    margin-top: 15px
    font-family: $ptsans-regular
    fsh(14px, 1.25)

  &__know-more
    margin: (55px * (310 / 720)) auto 0

    +bp('480')
      margin-top: 55px * (470 / 720)

    +bp('768')
      margin-top: 55px


.cooking-steps
  padding-top: 70px * (310 / 720)

  +bp('480')
    padding-top: 70px * (470 / 720)

  +bp('768')
    padding-top: 70px

  &__title
    margin: 0 auto
    max-width: 980px
    padding: 0 (20px * (310 / 720))
    text-align: center
    text-transform: none

    +bp('480')
      padding: 0 (20px * (470 / 720))

    +bp('768')
      padding: 0 20px

    +bp('1024')
      padding: 0
      text-align: left

  &__list
    margin: (60px * (310 / 720)) 0 0; padding: 0; list-style-type: none

    +bp('480')
      margin-top: (60px * (470 / 720))

    +bp('768')
      margin-top: 60px

    +bp('1024')
      margin-top: 50px


  &__item
    &:not(:last-of-type)
      margin-bottom: 70px * (310 / 720)

      +bp('480')
        margin-bottom: 70px * (470 / 720)

      +bp('768')
        margin-bottom: 70px

      +bp('1024')
        margin-bottom: 0px

    +bp('1024')

      &:nth-of-type(even)
        background-color: $bg-gray-4

      &:nth-of-type(odd)
        background-color: $base-bg-color

.cook-step
  js-display: flex; display: flex
  flex-direction: column
  padding: 0 (20px * (310 / 720))

  +bp('480')
    padding: 0 (20px * (470 / 720))

  +bp('768')
    padding: 0 20px

  +bp('1024')
    flex-direction: row
    justify-content: center
    padding: 22px 0

  &__left
    position: relative

    +bp('1024')
      js-display: flex; display: flex
      justify-content: flex-end
      align-items: center


  &__number
    absolute: top (20px * (310 / 720)) left (20px * (310 / 720))
    size: 43px
    border: 1px solid $bg-black-2
    border-radius: 50%
    text-align: center
    font-family: $georgia
    fsh(30px, 43px)
    color: $font-black-2
    font-style: italic
    font-weight: bold

    +bp('480')
      top: 20px * (470 / 720)
      left: 20px * (470 / 720)

    +bp('768')
      top: 20px; left: 20px

    +bp('1024')
      position: static
      line-height: 38px

  &__image
    size: 100% auto
    padding-bottom: (146 / 261) * 100%
    background: $bg-green-1 center center / cover no-repeat

    +bp('1024')
      margin-left: 25px
      size: 261px 146px


  &__right
    margin: (30px * (310 / 720)) 0 0
    width: 100%
    color: $font-black-2

    +bp('480')
      margin: (30px * (470 / 720)) 0 0

    +bp('768')
      margin: 30px 0 0

    +bp('1024')
      width: (620 / 1200) * 100%
      margin: 0 0 0 40px

  &__title
    margin: 0
    font-family: $ptsans-bold
    fsh(20px, 1.25)

  &__desk
    margin-top: 25px * (310 / 720)
    font-family: $ptsans-regular
    fsh(14px, 1.25)

    +bp('480')
      margin-top: 25px * (470 / 720)

    +bp('768')
      margin-top: 38px



