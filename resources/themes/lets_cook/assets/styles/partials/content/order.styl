
/* ----- ORDER ----- */


// ORDER MAIN
.order-main
  background-color: $bg-yellow-1
  color: $font-black-1

  &__wrapper
    max-width: 100%

    +bp('1024')
      margin: 0 auto
      max-width: 980px

  &__top
    js-display: flex; display: flex
    flex-direction: column
    padding-top: 140px * (310 / 720)

    +bp('480')
      padding-top: 140px * (470 / 720)

    +bp('768')
      padding-top: 140px

    +bp('1024')
      flex-direction: row
      justify-content: space-between
      align-items: flex-start
      padding: 90px 0 20px

  &__title
    @extend .georgia-title
    text-transform: none
    text-align: center

    +bp('1024')
      text-align: left
      font-family: $ptsans-narrow-bold
      font-style: normal
      fs(48px)

  &__subTitle
    text-align: center
    padding: 0 (20px * (310 / 720))
    fsh(20px * (310 / 720), 52 / 20)

    +bp('480')
      padding: 0 (20px * (470 / 720))
      fs(20px * (470 / 720))

    +bp('768')
      padding: 0 20px
      fs(20px)

    +bp('1024')
      margin-top: 15px
      padding: 0
      text-align: left
      fsh(14px, 1.4)

  &__result
    margin-top: 20px * (310 / 720)
    padding: (30px * (310 / 720)) 0
    background: url('../images/yellow-bg.png') top left repeat

    +bp('480')
      margin-top: 20px * (470 / 720)
      padding: (30px * (470 / 720)) 0

    +bp('768')
      margin-top: 20px
      padding: 30px 0

    +bp('1024')
      margin-top: 58px
      padding: 0
      background: none

  &__result-wrapper
    margin: 0 auto
    padding: 0 (20px * (310 / 720))
    js-display: flex; display: flex
    align-items: center

    +bp('480')
      padding: 0 (20px * (470 / 720))

    +bp('768')
      padding: 0 20px

    +bp('1024')
      margin: 0
      padding: 0

  &__count-title
    margin-bottom: 10px * (310 / 720)
    padding-left: 5px
    font-family: $ptsans-bold
    fsh(10px, 1)
    color: $font-black-2
    text-transform: uppercase

    +bp('480')
      margin-bottom: 10px * (470 / 720)

    +bp('768')
      margin-bottom: 10px
      fs(14px)

  &__count
    &:not(:first-of-type)
      margin-left: 30px

      +bp('480')
        margin-left: 40px

      +bp('768')
        margin-left: 60px


  &__count-list
    margin: 0; padding: (10px * (310 / 720)) (5px * (310 / 720)); list-style-type: none
    border: 1px solid $bg-gray-5
    fs(0px)

    +bp('480')
      padding: (10px * (470 / 720)) (5px * (470 / 720))

    +bp('768')
      padding: 10px 5px

  &__count-item
    margin: 0 3px
    display: inline-block

    +bp('480')
      margin: 0 5px

    +bp('768')
      margin: 0 10px

    +bp('1024')
      size: 50px
      border-width: 3px
      font-family: $ptsans-narrow-regular
      font-style: normal
      font-weight: normal
      fsh(30px, 44px)

    &[data-active] a, &:hover a
      background-color: $bg-red-1
      color: $font-yellow-2

    a
      display: inline-block
      size: 20px
      border-radius: 50%
      background-color: transparent
      border: 2px solid $bg-red-1
      text-align: center
      color: $font-red-3
      fsh(12px, 18px)
      font-family: $georgia
      font-style: italic
      font-weight: bold
      cursor: pointer
      text-decoration: none

      +bp('480')
        size: 30px
        fsh(20px, 26px)

      +bp('768')
        size: 45px
        fsh(30px, 40px)

      +bp('1024')
        size: 50px
        border-width: 3px
        font-family: $ptsans-narrow-regular
        font-style: normal
        font-weight: normal
        fsh(30px, 44px)

  &__left

    +bp('1024')
      max-width: 750px

  &__right
    padding: 0 (20px * (310 / 720)) (20px * (310 / 720))
    background: url("../images/yellow-bg.png") top left repeat;
    fs(0px)

    +bp('480')
      padding: 0 (20px * (470 / 720)) (20px * (470 / 720))

    +bp('768')
      padding: 0 20px 20px

    +bp('1024')
      padding: 0
      align-self: flex-end
      background: none

  &__price
    display: inline-block
    vertical-align: top

    +bp('1024')
      display: block

  &__price-title
    font-family: $ptsans-caption-regular
    fsh(12px, 1.5)

    +bp('480')
      fs(14px)

    +bp('768')
      fs(20px)


  &__price-value
    font-family: $ptsans-narrow-bold
    fsh(60px * (310 / 720), 1)

    +bp('480')
      fs(60px * (470 / 720))

    +bp('768')
      fs(60px)

    span
      font-family: $ptsans-narrow-regular
      margin-left: 5px
      fs(30px * (310 / 720))

      +bp('480')
        fs(30px * (470 / 720))
        margin-left: 8px

      +bp('768')
        fs(30px)
        margin-left: 12px

  &__portion
    display: inline-block
    vertical-align: top
    margin-left: 50px
    color: $font-green-2

    +bp('480')
      margin-left: 100px

    +bp('768')
      margin-left: 200px

    +bp('1024')
      display: block
      margin: 15px 0 0 0

  &__portion-title
    font-family: $ptsans-caption-regular
    fsh(12px, 1.5)

    +bp('480')
      fs(14px)

    +bp('768')
      fs(20px)

    +bp('1024')
      line-height: 1.1

  &__portion-value
    font-family: $ptsans-narrow-bold
    fsh(60px * (310 / 720), 1)

    +bp('480')
      fs(60px * (470 / 720))

    +bp('768')
      fs(60px)

    +bp('1024')
      fs(40px)

    span
      margin-left: 7px
      font-family: $ptsans-narrow-regular
      fsh(20px, 1.4)

      +bp('1024')
        font-family: $ptsans-regular

  &__make-order

    &[data-device='desktop']
      display: none
      margin-top: 18px

      +bp('1024')
        display: inline-block

    &[data-device='mobile']
      background-color: $bg-green-1

  &__list
    margin: 0; padding: 0; list-style-type: none
    js-display: flex; display: flex
    flex-wrap: wrap
    background: url('../images/yellow-bg.png') top center repeat

  &__item
    display: none
    width: 33.3333333%
    margin-bottom: 1px

    &[data-active]
      display: block

    +bp('1024')
      width: (976px / 5)

      &:not(:nth-of-type(5n))
        margin-right: 1px

    &:nth-of-type(5n+1)
      .order-main__item-title
        background-color: $bg-orange-1
        color: $font-black-2

    &:nth-of-type(5n+2)
      .order-main__item-title
        background-color: $bg-red-4
        color: $font-yellow-2

    &:nth-of-type(5n+3)
      .order-main__item-title
        background-color: $bg-red-2
        color: $font-yellow-2

    &:nth-of-type(5n+4)
      .order-main__item-title
        background-color: $bg-orange-2
        color: $font-yellow-2

    &:nth-of-type(5n)
      .order-main__item-title
        background-color: $bg-green-2
        color: $font-yellow-2

  &__link
    display: block
    text-decoration: none

  &__img
    size: 100% auto
    padding-bottom: (160 / 240) * 100%
    background: $bg-green-1 center center / cover no-repeat

  &__item-title
    margin: 0
    size: 100% auto
    padding: (8px * (310 / 720)) (15px * (310 / 720))
    background-color: $bg-green-2 // default -- need to set own in HTML
    color: $font-yellow-2 // default -- need to SET in HTML
    font-family: $ptsans-narrow-bold
    fsh(20px * (310 / 720), 1.25)

    +bp('480')
      padding: (8px * (470 / 720)) (15px * (470 / 720))
      fs(20px * (470 / 720))

    +bp('768')
      padding: 8px 15px
      fs(20px)

    +bp('1024')
      padding: 5px 12px
      fs(14px)

  &__bottom
    js-display: flex; display: flex;
    flex-direction: column
    padding: (30px * (310 / 720)) (20px * (310 / 720))

    +bp('480')
      padding: (30px * (470 / 720)) (20px * (470 / 720))

    +bp('768')
      padding: 30px 20px

    +bp('1024')
      flex-direction: row
      justify-content: space-between
      padding: 50px 0

  &__desc
    font-family: $ptsans-regular
    color: $font-black-1
    fsh(20px * (310 / 720), 1.35)

    +bp('480')
      fs(20px * (470 / 720))

    +bp('768')

      fs(20px)

    +bp('1024')
      width: (630 / 980) * 100%
      fs(14px)

    p
      margin: 0

      &:not(:last-of-type)
        margin: 0 0 (35px * (310 / 720))

        +bp('480')
          margin: 0 0 (35px * (470 / 720))

        +bp('768')
          margin: 0 0 35px

        +bp('1024')
          margin: 0 0 35px

  &__edit
    margin-top: 10px
    align-self: center

    +bp('480')
      margin-top: 15px

    +bp('768')
      margin-top: 40px

    +bp('1024')
      margin-top: 0
      align-self: flex-end



// ORDER POP UP
.order-pop-up
  fixed: top 0 left 0
  size: 100%
  z-index: 9999
  visibility: hidden; opacity: 0
  will-change: visibility, opacity
  transition: all 0.5s

  &[data-active]
    visibility: visible; opacity: 1

  &__bg-layout
    absolute: top 0 left 0
    z-index: 1
    size: 100%
    background-color: rgba(0,0,0,0.8)

  &__wrapper
    absolute: top 50% left 50%
    z-index: 2
    transform: translate(-50%, -50%)
    size: 90% auto
    max-width: 1170px
    max-height: 90%
    padding: 15px 0 120px
    background-color: $base-bg-color
    overflow: auto

    +bp('1024')
      padding: 35px 0 115px

  &__title
    @extend .georgia-title
    text-transform: none
    text-align: center

    +bp('1024')
      padding: 0 25px
      text-align: left
      font-family: $ptsans-narrow-bold
      font-style: normal
      fs(48px)

  &__list
    margin: 20px 0 0; padding: 0 (25px * (310 / 720)); list-style-type: none
    height: 250px
    overflow: auto
    fs(0px)

    +bp('480')
      margin: 35px 0 0;
      padding: 0 (25px * (470 / 720))

    +bp('1024')
      margin: 50px 0 0
      padding: 0 25px
      height: 330px

  &__item
    margin: 0 auto 10px

    +bp('768')
      display: inline-block

      &:not(:last-of-type)
        margin-right: 6px

    +bp('1024')
      margin: 0 0 30px

  &__bottom
    absolute: bottom 10px left 0
    width: 100%

    +bp('768')
      bottom: 25px

.order-pop-up-bottom
  js-display: flex; display: flex
  flex-direction: column
  background-color: $bg-black-1
  padding: 9px (24px * (310 / 720))

  +bp('480')
    padding: 9px (24px * (470 / 720))

  +bp('768')
    padding: 9px 24px

  +bp('1024')
    flex-direction: row
    justify-content: space-between
    align-items: center

  &__left
    color: $font-white-1
    fs(0px)
    text-align: center

    +bp('1024')
      text-align: left

  &__info
    display: block
    font-family: $ptsans-bold
    fsh(12px, 1.4)

    +bp('768')
      fs(14px)

    +bp('1024')
      display: inline-block
      fs(16px)

    &:not(:first-of-type)

      +bp('1024')
        margin-left: 30px

    span
      font-family: $ptsans-regular
      margin-left: 7px
      fs(14px)

  &__right
    js-display: flex; display: flex
    justify-content: center
    margin-top: 10px
    fs(0px)

    +bp('1024')
      margin-top: 0px
      text-align: left

  &__cancel
    display: inline-block

  &__save
    display: inline-block
    margin-left: 10px

    +bp('1024')
      margin: 0 0 0 24px

.order-day-item
  color: $font-black-1
  width: 200px
  position: relative

  +bp('768')
    width: 240px

  +bp('1024')
    width: 210px

  &__img
    size: 100% auto
    padding-bottom: 67.77777%
    background: $bg-green-1 center center / cover no-repeat

  &__content
    padding: 10px 12px 20px
    background-color: $bg-gray-7

  &__change
    absolute: top 0 left 0
    size: 100%
    visibility: hidden; opacity: 0
    will-change: visibility, opacity
    transition: all 0.3s

    &[data-active]
      visibility: visible; opacity: 1

  &__title
    font-family: $ptsans-bold
    fsh(14px, 1.25)

    +bp('1024')
      fs(16px)

  &__desc
    margin: 12px 0
    font-family: $ptsans-regular
    fsh(14px, 1.25)

  &__basket
    absolute: top 15px right 15px
    size: 131px 37px
    background-color: $bg-green-1
    text-align: center
    font-family: $ptsans-regular
    text-transform: uppercase
    color: $font-white-1
    fsh(13px, 37px)
    visibility: hidden; opacity: 0
    will-change: visibility, opacity
    transition: all 0.5s

  &__buttons
    margin-top: 15px
    js-display: flex; display: flex;
    justify-content: space-between

    &[data-active]

      .order-day-item__add-remove
        width: 48%

      .order-day-item__edit
        display: inline-block
        width: 48%

  &__add-remove
    width: 100%

    input[type='checkbox']
      display: none

      &:checked + label

        &::before
          content: none

        span:nth-child(1)
          display: none

        span:nth-child(2)
          display: inline

        & + .order-day-item__basket
          visibility: visible; opacity: 1

    label
      position: relative
      width: 100%

      &::before
        content: '+'
        absolute: top 50% left 15px
        transform: translateY(-50%)
        size: 26px
        border: 1px solid $font-yellow-2
        border-radius: 50%
        text-align: center
        fsh(19px, 24px)

      span:nth-child(1)
        display: inline

      span:nth-child(2)
        display: none


  &__edit
    display: none


.order-day-change
  padding: 34px
  background-color: rgba(0,0,0,0.85)

  &__title
    font-family: $ptsans-bold
    color: $font-white-1
    text-transform: uppercase
    fsh(14px, 1.15)

  &__cancel
    absolute: top 0 right 0
    size: 40px
    cursor pointer

    &::before, &::after
      content: ''
      absolute: top 50% left 50%
      transform-origin: 50% 50%
      transform: translate(-50%, -50%) rotate(-45deg)
      size: 20px 3px
      border-radius: 2px
      background-color: $bg-white-1

    &::after
      transform: translate(-50%, -50%) rotate(45deg)

  &__list
    margin: 20px 0 0; padding: 0; list-style-type: none
    fs(0px)

  &__item
    display: inline-block
    margin-bottom: 12px
    vertical-align: top

    &:not(:nth-of-type(3n))
      margin-right: 8px

    input[type='radio']
      display: none

      &:checked + label
        background-color: $bg-red-2
        color: $font-white-1

    label
      display: inline-block
      size: 36px
      border: 3px solid $bg-red-2
      border-radius: 50%
      font-family: $ptsans-narrow-regular
      fsh(20px, 32px)
      text-align: center
      color: $font-white-1
      cursor: pointer

      +bp('768')
        size: 41px
        fsh(24px, 35px)







// ORDER INGRIDIENTS
.order-ing
  position: relative
  max-height: 120px * (310 / 720)
  background-color: $bg-orange-1
  overflow: hidden
  will-change: max-height
  transition: max-height 0.5s

  +bp('480')
    max-height: 120px * (470 / 720)

  +bp('768')
    max-height: 120px

  +bp('1024')
    max-height: none

  &__title
    background-color: $bg-orange-1

    &[data-active]
      & > span:nth-child(1)
        display: none

      & > span:nth-child(2)
        display: inline-block

    span
      text-decoration: underline

      &:nth-child(1)
        display: inline-block

      &:nth-child(2)
        display: none

  &__lists
    js-display: flex; display: flex
    flex-direction: column
    margin: 0 auto
    max-width: 980px

    +bp('1024')
      flex-direction: row
      justify-content: space-between
      max-height: 400px
      padding-bottom: 100px
      will-change: max-height
      transition: max-height 1s

      &::after
        content: ''
        absolute: bottom 100px left 0
        size: 100% 70px
        background: linear-gradient(to bottom, rgba(234,156,31,0) 0%, rgba(234,156,31,0.5) 31%, rgba(234,156,31,1) 100%)

      &[data-active]
        max-height: 3000px

        &::after
          background: none

  &__list-wrapper
    position: relative
    width: 100%
    margin-bottom: 20px * (310 / 720)
    padding: 0 (20px * (310 / 720))
    overflow: hidden

    +bp('480')
      margin-bottom: 20px * (470 / 720)
      padding: 0 (20px * (470 / 720))

    +bp('768')
      margin-bottom: 20px
      padding: 0 20px

    +bp('1024')
      margin-bottom: 0
      width: 32%
      padding: 40px 0 0

      &::before
        content: ''

    &::before
      absolute: top -1px left 0
      size: 0
      border-style: solid
      border-width: 17px 17px 0 0
      border-color: $bg-yellow-1 transparent transparent transparent;

  &__list-title
    margin: 0
    font-family: $ptsans-bold
    fsh(45px * (310 / 720), 1)

    +bp('480')
      fs(45px * (470 / 720))

    +bp('768')
      fs(45px)

    +bp('1024')
      fs(20px)

  &__list
    margin: (40px * (310 / 720)) 0 0; padding: 0; list-style-type: none
    fsh(30px * (310 / 720), 1.25)

    +bp('480')
      margin: (40px * (470 / 720)) 0 0
      fs(30px * (470 / 720))

    +bp('768')
      margin: 40px 0 0
      fs(30px)

    +bp('1024')
      margin: 24px 0 0
      fs(14px)

    li
      margin-bottom: 10px
      js-display: flex; display: flex
      justify-content: space-between
      align-items: center

      +bp('1024')
        margin-bottom: 15px

      span
        width: 62%

        +bp('480')
          width: 62%

        +bp('768')
          width: 75%

        +bp('1024')
          width: 62%

  &__show
    display: none

    +bp('1024')
      display: inline-block
      position: absolute
      bottom: 20px; left: 50%
      transform: translateX(-50%)

      &[data-active]
        span:nth-child(1)
          display: none

        span:nth-child(2)
          display: inline-block

      span
        display: inline-block
        vertical-align: middle

        &:nth-child(1)
          display: inline-block

          &::after
            margin-left: 25px
            content: '+'
            display: inline-block
            vertical-align: middle
            size: 25px
            border: 1px solid $font-yellow-2
            border-radius: 50%
            font-family: $ptsans-regular
            fsh(19px, 23px)
            color: $font-yellow-2

        &:nth-child(2)
          display: none

          &::after
            margin-left: 25px
            content: '-'
            display: inline-block
            vertical-align: middle
            size: 25px
            border-radius: 50%
            border: 1px solid $font-yellow-2
            font-family: $ptsans-regular
            fsh(19px, 23px)
            color: $font-yellow-2




// ORDER ADD MORE
.order-add-more
  position: relative
  background-color: $bg-yellow-1
  overflow: hidden

  &::after
    position: absolute
    left: 0; bottom: 0
    size: 100% 25px
    background: linear-gradient(to right, rgba(29,81,55,1) 0%, rgba(6,91,20,1) 100%);

    +bp('1024')
      content: ''

  &__title
    text-align: center
    line-height: 120px * (310 / 720)
    background-color: $bg-red-1
    color: $font-white-1
    text-transform: none

    +bp('480')
