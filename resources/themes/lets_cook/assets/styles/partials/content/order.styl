          background: url('../images/yellow-bg.png') top left repeat

    &:nth-of-type(5n+1)
      .more-item__info[data-device='mobile']
        background-color: $bg-orange-1

    &:nth-of-type(5n+2)
      .more-item__info[data-device='mobile']
        background-color: $bg-red-4

    &:nth-of-type(5n+3)
      .more-item__info[data-device='mobile']
        background-color: $bg-red-2
    &:nth-of-type(5n+4)
      .more-item__info[data-device='mobile']
        background-color: $bg-orange-2

    &:nth-of-type(5n)
      .more-item__info[data-device='mobile']
        background-color: $bg-green-2

.more-item
  cursor: pointer

  &[data-active]
    .more-item__img
      &::before
        border-width: 7px * (320 / 720)

        +bp('480')
          border-width: 7px * (480 / 720)

        +bp('768')
          border-width: 7px

        +bp('1024')
          border-width: 0px

  &:hover
    .more-item__img
      +bp('1024')
        &::before
          absolute: top 0 left 0
          size: 100%
          border-width: 7px

  &__img
    position: relative
    size: 100% auto
    padding-bottom: (120 / 180) * 100%
    background: $bg-green-1 center center / cover no-repeat

    &::before
      content: ''
      absolute: top 0 left 0
      size: 100%
      border: 0 solid $bg-green-1
      will-change: border-width
      transition: border-width 0.3s

  &__info

    &[data-device='mobile']
      padding: (12px * (310 / 720)) (7px * (310 / 720))
      text-align: center

      +bp('480')
