
/* ----- ORDER EDIT ----- */

.order-edit
  border-top: 1px solid $bg-white-1

  &__wrapper
    js-display: flex; display: flex
    flex-direction: column

    +bp('1024')
      flex-direction: row

  &__left
    width: 100%
    padding: 20px 10px 30px
    background-color: $bg-red-3

    +bp('480')
      padding: 20px 20px 40px

    +bp('768')
      padding: 20px 40px 50px

    +bp('1024')
      width: (700 / 1200) * 100%
      padding: 20px 40px 70px

  &__img
    position: relative
    size: 100% auto
    padding-bottom: (184 / 300) * 100%
    background: $bg-green-1 center center / cover no-repeat
    color: $font-white-1

  &__title
    @extend .georgia-title
    absolute: left ((30 / 615) * 100%) top ((20 / 377) * 100%)
    max-width: 80%
    text-transform: none

  &__price
    absolute: right ((30 / 615) * 100%) bottom ((20 / 377) * 100%)
    @extend .georgia-title

  &__desc
    margin: 30px 0
    font-family: $ptsans-regular
    fsh(16px, 1.3)
    color: $font-yellow-4

  &__add-title
    margin: 30px 0
    text-align: center
    font-family: $ptsans-bold
    color: $font-yellow-4

  &__add-list
    margin: 0; padding: 0; list-style-type: none
    fs(0px)

  &__add-item
    margin: 0 0 7px 2%
    display: inline-block
    width: 49%

    &:nth-of-type(2n+1)
      margin-left: 0

    +bp('480')
      margin: 0 0 12px 2%
      width: 32%

      &:nth-of-type(2n+1)
        margin-left: 2%

      &:nth-of-type(3n+1)
        margin-left: 0

    +bp('768')
      margin: 0 0 20px 2%
      width: 23.5%

      &:nth-of-type(2n+1)
        margin-left: 2%

      &:nth-of-type(3n+1)
        margin-left: 2%

      &:nth-of-type(4n+1)
        margin-left: 0

    +bp('1024')
      margin: 0 0 12px 2%
      width: 32%

      &:nth-of-type(3n+4)
        margin-left: 0

      &:nth-of-type(3n+3)
        margin-left: 2%

      &:nth-of-type(3n+5)
        margin-left: 2%

    +bp('1280')
      margin: 0 0 20px 2%
      width: 23.5%

      &:nth-of-type(2n+1)
        margin-left: 2%

      &:nth-of-type(3n+1)
        margin-left: 2%

      &:nth-of-type(4n+1)
        margin-left: 0

  &__right
    width: 100%
    padding: 35px 10px 30px
    background-color: $bg-white-1

    +bp('480')
      padding: 35px 20px 40px

    +bp('768')
      padding: 35px 40px 50px

    +bp('1024')
      width: (500 / 1200) * 100%
      padding: 35px 40px 70px

  &__select
    &:not(:first-of-type)
      margin-top: 20px;

  &__delivery
    margin-top: 35px

  &__subscribe
    margin: 40px 0

  &__subscribe-title
    margin: 25px 0
    font-family: $ptsans-bold
    fsh(19px, 1)
    color: $font-black-2

  &__subscribe-checkbox
    display: block
    margin: 15px 0

  &__payment
    margin: 40px 0

  &__payment-title
    margin: 25px 0
    font-family: $ptsans-bold
    fsh(19px, 1)
    color: $font-black-2

  &__payment-checkbox
    display: block
    margin: 15px 0

  &__address
    margin: 40px 0

  &__address-title
    margin: 25px 0
    font-family: $ptsans-bold
    fsh(19px, 1)
    color: $font-black-2

  &__address-wrapper
    fs(0px)

  &__address-inner

    &[data-info='change']
      size: 100% auto

      +bp('1024')
        width: 70%

    &[data-info='save']
      size: 100% auto

  &__address-text
    margin-right: 10px
    display: none
    font-family: $ptsans-regular
    fsh(19px, 1.25)

    &[data-active]
      display: inline

  &__address-change
    display: inline
    cursor: pointer

    &[data-info='change']
      display: inline

      & > span:nth-child(1)
        display: inline-block

      & > span:nth-child(2)
        display: none

    &[data-info='save']
      display: block
      margin: 10px auto 0
      text-align: center

      & > span:nth-child(1)
        display: none

      & > span:nth-child(2)
        display: inline-block

    span
      font-family: $ptsans-bold
      text-decoration: underline
      fsh(19px, 1.25)


  &__address-input
    display: none
    size: 100% 52px
    padding: 16px 20px
    background-color: $base-bg-color
    border-width: 2px
    -webkit-appearance: none
    -moz-appearance: none
    appearance: none
    border: 2px solid $bg-orange-7
    outline: none
    resize: none
    overflow: hidden
    font-family: $ptsans-regular
    fsh(16px, 1.25)
    color: $font-black-2

    &::-webkit-input-placeholder
      color: $font-gray-3

    &::-moz-placeholder
      color: $font-gray-3

    &:-ms-input-placeholder
      color: $font-gray-3

    &:-moz-placeholder
      color: $font-gray-3

    &::placeholder
      color: $font-gray-3

    &[data-active]
      display: block


  &__comment
    margin-top: 25px

  &__kupon
    margin-top: 15px

  &__total
    margin: 25px 0

  &__total-wrapper
    js-display: flex; display: flex
    justify-content: space-between
    align-items: center

    &:nth-of-type(1)
      color: $font-black-2

    &:nth-of-type(2)
      margin-top: 10px
      color: $font-red-2

  &__total-title
    font-family: $ptsans-bold
    fsh(19px, 1)

  &__total-value
    font-family: $georgia
    font-weight: 700
    font-style: italic
    fsh(50px, 1)

    span
      margin-left: 12px
      fs(20px)

  &__cancel-order
    size: 35% 52px
    background-color: $bg-red-2
    text-align: center
    fsh(20px, 52px)
    color: $font-yellow-4
    text-decoration: underline
    text-transform: uppercase
    cursor: pointer

    &:hover
      text-decoration: none

  &__make-order
    size: 100% 52px
    background-color: $bg-orange-3
    text-align: center
    fsh(20px, 52px)
    color: $font-black-2
    text-decoration: underline
    text-transform: uppercase
    cursor: pointer

    &:hover
      text-decoration: none

  &__check-coupon
    size: 50% 52px
    background-color: $bg-orange-3
    text-align: center
    fsh(20px, 52px)
    color: $font-black-2
    text-decoration: underline
    text-transform: uppercase
    cursor: pointer
    margin-top 15px
    float right

    &[disabled]
      text-decoration: none
      cursor default

    &:hover
      text-decoration: none

.order-delivery

  &__title
    margin: 20px 0
    font-family: $ptsans-bold
    fsh(19px, 1)
    color: $font-black-2

  &__day
    fs(0px)

  &__day-radio
    display: inline-block
    width: 50%

  &__time
    margin-top: 23px
    fs(0px)

  &__time-radio
    display: inline-block
    width: (100 / 3) * 1%

    &:nth-of-type(2)
      border-left: 1px solid $bg-red-3
      border-right: 1px solid $bg-red-3



.order-add-item

  &__img
    size: 100% auto
    padding-bottom: (102 / 150) * 100%
    background: $bg-green-1 center center / cover no-repeat

  &__main
    padding: 6px 10px 15px
    background-color: $font-yellow-4

  &__title
    font-family: $ptsans-regular
    fsh(14px, 1.25)
    text-decoration: underline

  &__bottom
    margin-top: 10px
    js-display: flex; display: flex
    justify-content: space-between
    align-items: center
    color: $font-black-2

  &__price
    font-family: $ptsans-bold
    fsh(17px, 22px)
    text-decoration: underline


/* ----- end ORDER EDIT ----- */