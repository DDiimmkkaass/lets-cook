
/* ----- BASE STYLES ----- */

html
  font-size: $base-font-size
  font-family: $base-font-family
  height: 100%
  box-sizing: border-box
  -webkit-tap-highlight-color: transparent
  appearance: none

*, *:before, *:after
  box-sizing: inherit

body
  background: $base-bg-color
  font-weight: $base-font-weight
  line-height: $base-line-height
  color: $base-font-color
  height: 100%

.browserupgrade
  margin: 0.2em 0
  background: #ccc
  color: #000
  padding: 0.2em 0

.app
  position: relative
  min-width: 310px
  min-height: 100%
  z-index: 1


/* ----- end BASE STYLES ----- */
